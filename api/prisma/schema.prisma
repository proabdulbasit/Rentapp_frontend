generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Post {
  id         String      @id @default(auto()) @map("_id") @db.ObjectId
  title      String
  price      Int
  images     String[]
  address    String
  city       String
  bedType    BedType
  bathType   BathType
  type       Type
  latitude   String
  longitude  String
  createdAt  DateTime    @default(now())
  user       User        @relation(fields: [userId], references: [id])
  userId     String      @db.ObjectId
  postDetail PostDetail?
  savedPosts SavedPost[]
}

enum BedType {
  individual
  matrimonial
  queenSize
  kingSize
}

enum BathType {
  campartido
  privado
}

enum Type {
  mixto
  mujeres
  hombres
}

model PostDetail {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  description String
  services    String
  meetings    String
  pet         String
  wifi        String?
  school      Int?
  bus         Int?
  store       Int?
  post        Post   @relation(fields: [postId], references: [id])
  postId      String @unique @db.ObjectId
}

model SavedPost {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  user      User     @relation(fields: [userId], references: [id])
  post      Post     @relation(fields: [postId], references: [id])
  userId    String   @unique @db.ObjectId
  postId    String   @unique @db.ObjectId
  createdAt DateTime @default(now())

  @@unique([userId, postId])
}

model User {
  id         String      @id @default(auto()) @map("_id") @db.ObjectId
  email      String      @unique
  username   String      @unique
  password   String
  avatar     String?
  createdAt  DateTime    @default(now())
  posts      Post[]
  savedPosts SavedPost[]
}

